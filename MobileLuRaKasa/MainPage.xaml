<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ui="clr-namespace:MobileLuRaKasa.UI"
             x:Class="MobileLuRaKasa.MainPage"
             Shell.NavBarIsVisible="false">

    <VerticalStackLayout
        Padding="0"
        Spacing="0"
        BackgroundColor="LightGoldenrodYellow">
        
        
    <!--Hlavni Bar -->
        <ui:CustomMenu 
            x:Name="customMenu"
            IsBackButtonVisible="False"
            />
    <!-- Img objednavky-->
        <ImageButton
            x:Name="btnOrder"
            Source="order.png"
            Padding="30"
            Margin="90"
            CornerRadius="20"
            BackgroundColor="Gold"
            HeightRequest="150"
            WidthRequest="150"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Clicked="btnOrder_Clicked"
            Aspect="AspectFit">
        </ImageButton>
    <!-- Img placeni -->
        
        <ImageButton
            x:Name="btnPay"
            Source="pay.png"
            Padding="25"
            Margin="0"
            CornerRadius="20"
            HeightRequest="150"
            WidthRequest="150"
            BackgroundColor="Gold"
            Clicked="btnPay_Clicked">
            
        </ImageButton>
        
    </VerticalStackLayout>
   

</ContentPage>
